# Steam Clone Environment Configuration
# Copy this file to .env and update the values as needed

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# User Service Database
USER_DATABASE_URL=postgresql://user:password@localhost:5432/user_service

# Game Catalog Service Database
GAME_CATALOG_DATABASE_URL=postgresql://user:password@localhost:5433/game_catalog_service

# Review Service Database
REVIEW_DATABASE_URL=postgresql://user:password@localhost:5434/review_service

# Shopping Service Database
SHOPPING_DATABASE_URL=postgresql://user:password@localhost:5435/shopping_service

# Purchase Service Database
PURCHASE_DATABASE_URL=postgresql://user:password@localhost:5436/purchase_service

# Payment Service Database
PAYMENT_DATABASE_URL=postgresql://user:password@localhost:5437/payment_service

# Online Service Database
ONLINE_DATABASE_URL=postgresql://user:password@localhost:5438/online_service

# Social Service Database
SOCIAL_DATABASE_URL=postgresql://user:password@localhost:5439/social_service

# Notification Service Database
NOTIFICATION_DATABASE_URL=postgresql://user:password@localhost:5440/notification_service

# Recommendation Service Database
RECOMMENDATION_DATABASE_URL=postgresql://user:password@localhost:5441/recommendation_service

# Achievement Service Database
ACHIEVEMENT_DATABASE_URL=postgresql://user:password@localhost:5442/achievement_service

# Monitoring Service Database
MONITORING_DATABASE_URL=postgresql://user:password@localhost:5443/monitoring_service

# =============================================================================
# REDIS CONFIGURATION
# =============================================================================
REDIS_URL=redis://localhost:6379

# =============================================================================
# ELASTICSEARCH CONFIGURATION
# =============================================================================
ELASTICSEARCH_URL=http://localhost:9200

# =============================================================================
# KAFKA CONFIGURATION
# =============================================================================
KAFKA_BROKER=localhost:9092

# =============================================================================
# JWT CONFIGURATION
# =============================================================================
SECRET_KEY=your-super-secret-key-change-this-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# =============================================================================
# SERVICE PORTS
# =============================================================================
API_GATEWAY_PORT=8000
USER_SERVICE_PORT=8001
GAME_CATALOG_SERVICE_PORT=8002
REVIEW_SERVICE_PORT=8003
SHOPPING_SERVICE_PORT=8004
PURCHASE_SERVICE_PORT=8005
PAYMENT_SERVICE_PORT=8006
ONLINE_SERVICE_PORT=8007
SOCIAL_SERVICE_PORT=8008
NOTIFICATION_SERVICE_PORT=8009
RECOMMENDATION_SERVICE_PORT=8010
ACHIEVEMENT_SERVICE_PORT=8011
MONITORING_SERVICE_PORT=8012

# =============================================================================
# CORS CONFIGURATION
# =============================================================================
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8000,http://127.0.0.1:3000,http://127.0.0.1:8000

# =============================================================================
# RATE LIMITING
# =============================================================================
RATE_LIMIT_PER_MINUTE=60

# =============================================================================
# FILE UPLOAD CONFIGURATION
# =============================================================================
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================
LOG_LEVEL=INFO
LOG_FORMAT=json

# =============================================================================
# MONITORING CONFIGURATION
# =============================================================================
ENABLE_METRICS=true
METRICS_PORT=9090

# =============================================================================
# EXTERNAL SERVICES
# =============================================================================
# Payment Gateway (example)
# STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
# STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key

# Email Service (example)
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USERNAME=your-email@gmail.com
# SMTP_PASSWORD=your-app-password

# Cloud Storage (example)
# AWS_ACCESS_KEY_ID=your_aws_access_key
# AWS_SECRET_ACCESS_KEY=your_aws_secret_key
# AWS_S3_BUCKET=your-s3-bucket-name
# AWS_REGION=us-east-1

# =============================================================================
# DEVELOPMENT CONFIGURATION
# =============================================================================
DEBUG=true
RELOAD=true
WORKERS=1

# =============================================================================
# PRODUCTION CONFIGURATION
# =============================================================================
# DEBUG=false
# RELOAD=false
# WORKERS=4